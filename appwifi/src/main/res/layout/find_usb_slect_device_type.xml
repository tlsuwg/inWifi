<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containterll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v_line_color_f6"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/title_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bg_height"
        android:background="@color/white"
        android:orientation="vertical"></LinearLayout>


    <LinearLayout
        android:id="@+id/select_title_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"></LinearLayout>


    <LinearLayout
        android:id="@+id/main_lin_for_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/show_no_key_lin"
            android:orientation="vertical"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/show_no_key_text"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/show_no_key_edit"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center">

            <Button
                android:id="@+id/test_usb_dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现USB配件，测试使用" />

        </LinearLayout>

        <TextView
            android:id="@+id/show_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="？" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/be_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:text="？" />

            <Button
                android:id="@+id/be_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:text="？" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>

